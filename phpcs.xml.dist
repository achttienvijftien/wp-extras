<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for wp-extras">
    <description>Sniffs for wp-extras</description>

    <!-- Use colors in output. -->
    <arg name="colors"/>

    <arg value="ps"/>

    <arg name="extensions" value="php"/>

    <file>./src</file>
    <file>./tests</file>
    <file>./wp-extras.php</file>

    <rule ref="1815BuildingTechniques"/>

    <config name="testVersion" value="8.0-"/>
    <rule ref="PHPCompatibilityWP" />
</ruleset>
